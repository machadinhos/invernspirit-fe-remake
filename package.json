    "embla-carousel-svelte": "^8.5.1",
    "svelte": "^5.16.0",
    "svelte-icons-pack": "^3.1.3",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.5"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
