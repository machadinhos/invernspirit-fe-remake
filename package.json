{
  "name": "invernspirit-fe",
  "private": true,
  "type": "module",
  "packageManager": "bun@^1.1.37",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:preview": "vite build && vite preview --port 5173",
    "preview": "vite preview --port 5173",
    "local": "bunx wrangler pages dev functions --compatibility-flag=nodejs_compat --show-interactive-dev-session=false --port=9000",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --fix",
    "format": "prettier --write --list-different",
    "format:lint": "prettier --write --list-different . && eslint . --fix",
    "prepare": "bun scripts/prepare.js"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "autoprefixer": "^10.4.20",
    "dompurify": "^3.2.3",
    "embla-carousel-svelte": "^8.5.2",
    "svelte": "^5.19.0",
    "svelte-icons-pack": "^3.1.3",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "svelte-check": "^4.1.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
